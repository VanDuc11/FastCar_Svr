  load_data()
  async function load_data() {
    var TrangThai = document.querySelectorAll('.TrangThai');
    var HSD = document.querySelectorAll(".HSD");
    HSD.forEach((i) => {
      const date = new Date(i.innerHTML);
      const day = date.getDate();
      const month = date.getMonth() + 1;
      const year = date.getFullYear();
      const formattedDate = day + '/' + month + '/' + year
      i.innerHTML = formattedDate
    })
    TrangThai.forEach((i) => {
      if (i.innerHTML == 0) {
        i.innerHTML = "Chờ thanh toán"
        i.style.background = "#FDE1C3"
      } else if (i.innerHTML == 1) {
        i.innerHTML = "Đã thanh toán"
        i.style.background = "#B9FFD3"
      } else if (i.innerHTML == 2) {
        i.innerHTML = "Từ chối"
        i.style.background = "#F9BABA"
      }
    })
  }

</script>
<script>
  const SoTienGD = document.querySelectorAll(".SoTienGD");

  for (const soTienElement of SoTienGD) {
    const soTienString = soTienElement.textContent.trim();
    if (!isNaN(soTienString)) {
      const soTienNumber = parseFloat(soTienString);
      if (soTienNumber >= 0) {
        const formattedPrice = new Intl.NumberFormat('vi-VN').format(soTienNumber, {
          minimumFractionDigits: 2,
          decimal: ',',
          thousandsSeparator: '.',
        });
        soTienElement.textContent = formattedPrice + " đ";
      } else {
        console.error("Invalid transaction amount:", soTienString);
      }
    } else {
      console.error("Invalid transaction amount format:", soTienString);
    }
  }
</script>
<script>
  async function chitiet(id) {
    const response = await fetch(`/api/lsgd/find/${id}`).then(response => response.json());
    document.getElementById("User").innerHTML = response.User.UserName
    document.getElementById("SDT").innerHTML = response.User.SDT
    document.getElementById("NoiDung").innerHTML = response.NoiDung
    document.getElementById("SoTienGD").innerHTML = response.SoTienGD
    document.getElementById("ThoiGian").innerHTML = response.ThoiGian

    // format giá 
    var SoTienGD = document.querySelector('#SoTienGD');
    const formattedPrice = new Intl.NumberFormat('vi-VN').format(SoTienGD.innerHTML, {
      minimumFractionDigits: 2,
      decimal: ',',
      thousandsSeparator: '.',
    });
    SoTienGD.innerHTML = formattedPrice + " đ"

    // format Ngày ================
    var ThoiGian = document.querySelector("#ThoiGian");
    const date = new Date(ThoiGian.innerHTML);
    const day = date.getDate();
    const month = date.getMonth() + 1;
    const year = date.getFullYear();
    const formattedDate = day + '/' + month + '/' + year
    ThoiGian.innerHTML = formattedDate
    SoTienGD.innerHTML = formattedPrice + " đ"
    // validate trạng thái
    const TrangThai = document.querySelector('#TrangThai');

    if (TrangThai.innerHTML == 0) {
      TrangThai.innerHTML = "Chờ thanh toán"
      TrangThai.style.background = "#F9BABA"
    } else if (TrangThai.innerHTML == 1) {
      TrangThai.innerHTML = "Đã thanh toán"
      TrangThai.style.background = "#02790C"
    } else if (TrangThai.innerHTML == 2) {
      TrangThai.innerHTML = "Tù chối"
      TrangThai.style.background = "#A90312"
    }
  }

</script>

