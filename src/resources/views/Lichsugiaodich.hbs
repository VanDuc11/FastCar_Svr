<script>


  load()
  async function load() {
    // số tứ tự
    var stt = 0
    const stt1 = document.querySelectorAll(".stt");
    for (let i = 0; i < stt1.length; i++) {
      stt1[i].innerText = i + 1;
    }
    var response = null;
    var tt0 = 0;
    var tt1 = 0;
    var tt2 = 0;
    const queryString = window.location.search;
    const urlParams = new URLSearchParams(queryString);
    const startDate = urlParams.get('start_date');
    const endDate = urlParams.get('end_date');
    if (urlParams.has('start_date') && urlParams.has('end_date')) {
      document.getElementById('ht').href = `Lichsugiaodich?start_date=${startDate}&end_date=${endDate}&TrangThai=${"1"}`;
      document.getElementById('hy').href = `Lichsugiaodich?start_date=${startDate}&end_date=${endDate}&TrangThai=${"2"}`;
      document.getElementById('all').href = `Lichsugiaodich?start_date=${startDate}&end_date=${endDate}&TrangThai=${"1,2"}`;
      response = await fetch(`/api/lsgd/loc?start_date=${startDate}&end_date=${endDate}`).then(response => response.json());
    } else {
      document.getElementById('ht').href = `Lichsugiaodich?TrangThai=${"1"}`;
      document.getElementById('hy').href = `Lichsugiaodich?TrangThai=${"2"}`;
      document.getElementById('all').href = `Lichsugiaodich?TrangThai=${"1,2"}`;
      response = await fetch('/api/lsgd/loc').then(response => response.json());

    }
    let tong = 0;
    response.forEach(hd => {
      // hd chờ duyệt
      if (hd.TrangThai == 0) {
        tt0++;
      }
      if (hd.TrangThai == 1) {
        tt1++;
        tong++;
      }
      if (hd.TrangThaiHD == 2) {
        tt2++;
        tong++;
      }

    });
    document.getElementById('huy').innerText = tt2 + " Yêu cầu";
    document.getElementById('hoanthanh').innerText = tt1 + " Khách hàng";
    document.getElementById('tong').innerText = tong + " Giao dịch";

  }
</script>
