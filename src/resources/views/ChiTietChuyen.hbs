<script>
    const money = document.querySelectorAll('.money');
    const NgayTao = document.getElementById('ngaytao');
    money.forEach((i) => {
        const formattedPrice = new Intl.NumberFormat('vi-VN').format(i.innerHTML, {
            minimumFractionDigits: 2,
            decimal: ',',
            thousandsSeparator: '.',
        });
        i.innerHTML = formattedPrice + " đ"
    })
    const date = new Date(NgayTao.innerHTML);
    const day = date.getDate();
    const month = date.getMonth() + 1;
    const year = date.getFullYear();
    const hour = date.getHours();
    const minute = date.getMinutes();
    const second = date.getSeconds();
    const formattedDatetime = day + '/' + month + '/' + year + ' ' + hour + ':' + minute + ':' + second;
    NgayTao.innerHTML = "Ngày Tạo: " + formattedDatetime

    const TrangThai = document.getElementById('TrangThai');
    const LyDo = document.getElementById('LyDo');
    const TinhTrang = document.getElementById('TinhTrang');
    const giaoxe = document.getElementById('Giaoxe');
    const traxe = document.getElementById('Traxe');
    if (TrangThai.innerHTML == 0) {
        TrangThai.innerHTML = "Hóa đơn đã bị hủy"
        TrangThai.style.color = "red"
        LyDo.style.display = "block"
        TinhTrang.innerHTML = "Hóa đơn bị hủy"
        traxe.style.display = "none"
        giaoxe.style.display = "none"
    } else if (TrangThai.innerHTML == 1) {
        TrangThai.innerHTML = "Chờ duyệt"
        TrangThai.style.color = '#FF8B07'
        TinhTrang.innerHTML = "Chờ duyệt"
        TinhTrang.style.background = "#FDE1C3"
        traxe.style.display = "none"
        giaoxe.style.display = "none"
        LyDo.style.display = "none"
    } else if (TrangThai.innerHTML == 2) {
        TrangThai.innerHTML = "Chờ đặt cọc"
        TrangThai.style.color = '#FF8B07'
        TinhTrang.innerHTML = "Chờ duyệt"
        TinhTrang.style.background = "#FDE1C3"
        traxe.style.display = "none"
        giaoxe.style.display = "none"
        LyDo.style.display = "none"
    } else if (TrangThai.innerHTML == 3) {
        TrangThai.innerHTML = "Đặt cọc thành công"
        TrangThai.style.color = '#22AD56'
        TinhTrang.innerHTML = "Đã đặt cọc"
        TinhTrang.style.background = "#B9FFD3"
        TinhTrang.style.color = "#24AE58"
        traxe.style.display = "none"
        giaoxe.style.display = "none"
        LyDo.style.display = "none"
    } else if (TrangThai.innerHTML == 4) {
        TrangThai.innerHTML = "Khách hàng đã nhận xe"
        TrangThai.style.color = '#22AD56'
        TinhTrang.innerHTML = "Đang hoạt động"
        TinhTrang.style.background = "#B9FFD3"
        TinhTrang.style.color = "#24AE58"
        traxe.style.display = "none"
        giaoxe.style.display = "block"
        LyDo.style.display = "none"
    } else if (TrangThai.innerHTML == 5) {
        TrangThai.innerHTML = "Khách hàng mang trả xe "
        TrangThai.style.color = '#22AD56'
        TinhTrang.innerHTML = "Đang hoạt động"
        TinhTrang.style.background = "#B9FFD3"
        TinhTrang.style.color = "#24AE58"
        traxe.style.display = "none"
        giaoxe.style.display = "block"
        LyDo.style.display = "none"
    } else if (TrangThai.innerHTML == 6) {
        TrangThai.innerHTML = "Chủ xe nhận xe thành công"
        TrangThai.style.color = '#22AD56'
        TinhTrang.innerHTML = "Hoàn thành"
        TinhTrang.style.background = "#B9FFD3"
        TinhTrang.style.color = "#24AE58"
        traxe.style.display = "block"
        giaoxe.style.display = "block"
        LyDo.style.display = "none"
    }

</script>