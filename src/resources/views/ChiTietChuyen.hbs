                    <label>Tên khách hàng: <span style="font-weight: bold;">{{this.User.UserName}}</span> </label>
                </div>
                <div class="col-md-12">
                    <label>Số điện thoại: {{this.User.SDT}}</label>
                </div>
            </div>
            <div class="col-md-4">
                <div class="col-md-12">
                    <label>Email: {{this.User.Email}}</label>
                </div>
                <div class="col-md-12">
                    <label>Địa chỉ: {{this.User.DiaChi_GPLX}}</label>
                </div>
            </div>
        </div>


        <div class="row element-button">
        </div>
        <h1 style="font-size: 15px; ">Thông tin xe</h1>

        <div class="row">
            <div class="col-md-4">
                <div class="col-md-12">
                    <label>Tên xe: {{this.Xe.MauXe}}</label>
                </div>

                <div class="col-md-12">
                    <label>Biển số xe: {{this.Xe.BKS}}</label>
                </div>

            </div>
            <div class="col-md-4">
                <div class="col-md-12">
                    <label>Chỗ ngồi: {{this.Xe.SoGhe}} chỗ ngồi</label>
                </div>

                <div class="col-md-12">
                    <label>Loại nhiên liệu: {{this.Xe.LoaiNhienLieu}}</label>
                </div>
            </div>
            <div class="col-md-4">
                <div class="col-md-12">
                    <label>Năm sản xuất: {{this.Xe.NSX}}</label>
                </div>

                <div class="col-md-12">
                    <label>Chủ xe: {{this.User.UserName}}</label>
                </div>
            </div>
        </div>


        <div class="row element-button">
        </div>
        <h1 style="font-size: 15px;">Thông tin dịch vụ</h1>

        <div class="row">
            <div class="col-md-4">
                <div class="col-md-12">
                    <label>Ngày thuê: <span class="HSD">{{this.NgayThue}}</span> </label>
                </div>

                <div class="col-md-12">
                    <label>Ngày trả: <span class="HSD">{{this.NgayTra}}</span></label>
                </div>

            </div>
            <div class="col-md-4">
                <div class="col-md-12">
                    <label>Tổng số ngày: {{this.TongSoNgayThue}} Ngày</label>
                </div>

                <div class="col-md-12">
                    <label>Mã giảm giá: {{this.MaGiamGia}}</label>
                </div>
            </div>
            <div class="col-md-4">
                <div class="col-md-12">
                    <label>Lời nhắn : {{this.LoiNhan}}</label>
                </div>

                <div class="col-md-12">
                    <label id="LyDo" style="margin-bottom: 0px;">Lý do: {{this.LyDo}}</label>
                </div>
            </div>
            <div class="col-md-4">
                <div class="col-md-12">
                    <label style="font-weight: bold;">Tình trạng : <span
                            id="TrangThai">{{this.TrangThaiHD}}</span></label>
                </div>
            </div>
            <div class="col-md-4">
                <div class="col-md-12">
                    <label>Thế chấp: <span class="TheChap">{{this.TheChap}}</span></label>
                </div>
            </div>
            <div class="col-md-4">
                <div class="col-md-12">
                    <a id="Giaoxe" href="#"  data-toggle="modal" data-target="#ModalUP2" style="color: blue; style: dashed; text-decoration: underline;">Ảnh Xe khi giao</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="col-md-12">
                    <a id="Traxe" href="#" data-toggle="modal" data-target="#ModalUP3" style="color: blue; style: dashed; text-decoration: underline;">Ảnh xe khi trả</a>
                </div>
            </div>
        </div>

        <div class="row element-button">
        </div>
        <h1 style="font-size: 15px; ">Thành tiền</h1>

        <div class="row">
            <div class="col-md-3">
                <div class="col-md-12">
                    <label>Đơn giá thuê/ngày:</label>
                </div>

                <div class="col-md-12">
                    <label>Phí dịch vụ FastCar: {{this.TongSoNgayThue}} ngày</label>
                </div>
                <div class="col-md-12">
                    <label>Tổng phí: {{this.TongSoNgayThue}} ngày</label>
                </div>
                <div class="col-md-12">
                    <label>Mã khuyến mại: {{this.MaGiamGia}}</label>
                </div>
                <div class="col-md-12">
                    <label>Tổng Cộng:</label>
                </div>
                <div class="col-md-12">
                    <label>Đặt cọc (30%):</label>
                </div>
                <div class="col-md-12">
                    <label class="control-label">Thanh toán khi nhận xe:</label>
                </div>

            </div>
            <div class="col-md-4">
                <div class="col-md-12">
                    <label class="money"> {{this.Xe.GiaThue1Ngay}}</label>
                </div>

                <div class="col-md-12">
                    <label class="money"> {{this.PhiDV}}</label>
                </div>
                <div class="col-md-12">
                    <label class="money"> {{this.TongTien}}</label>
                </div>
                <div class="col-md-12">
                    <label class="money"> {{this.GiamGia}}</label>
                </div>
                <div class="col-md-12">
                    <label class="money"> {{this.TongTien}}</label>
                </div>
                <div class="col-md-12">
                    <label class="money"> {{this.TienCoc}}</label>
                </div>
                <div class="col-md-12">
                    <label class="money" style="font-weight: bold;"> {{this.ThanhToan}}</label>
                </div>

            </div>

        </div>

        {{!-- ảnh xe khi giao --}}
        <div class="modal fade" id="ModalUP2" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static"
            data-keyboard="false">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">

                    <div class="modal-body">
                        <div class="row">
                            <div class="form-group  col-md-12">
                                <span class="thong-tin-thanh-toan">
                                    <h5>Ảnh xe khi giao xe</h5>
                                </span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6" style=" display: flex;
                    flex-direction: column;">
                                <div class="images" style=" display: flex;">
                                    <img src="/images/{{this.HinhAnhChuXeGiaoXe.[0]}}" alt="" height="280px"
                                        width="400px" style="margin-left:120px;">
                                    <img src="/images/{{this.HinhAnhChuXeGiaoXe.[1]}}" alt="" height="280px"
                                        width="400px" style="margin-left:40px;">
                                </div>
                                <BR>
                            </div>
                        </div>
                        <a class="btn btn-cancel" data-dismiss="modal" href="#" style="margin-left:400px;">Đóng</a>
                    </div>
                    <div class="modal-footer">
                    </div>
                </div>
            </div>
        </div>

        {{!-- ảnh xe khi giao --}}
        <div class="modal fade" id="ModalUP3" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static"
            data-keyboard="false">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">

                    <div class="modal-body">
                        <div class="row">
                            <div class="form-group  col-md-12">
                                <span class="thong-tin-thanh-toan">
                                    <h5>Ảnh xe khi trả xe</h5>
                                </span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6" style=" display: flex;
                    flex-direction: column;">
                                <div class="images" style=" display: flex;">
                                    <img src="/images/{{this.HinhAnhKhachHangTraXe.[0]}}" alt="" height="280px"
                                        width="400px" style="margin-left:100px;">
                                    <img src="/images/{{this.HinhAnhKhachHangTraXe.[1]}}" alt="" height="280px"
                                        width="400px" style="margin-left:40px;">
                                </div>
                                <BR>
                            </div>
                        </div>
                        <a class="btn btn-cancel" data-dismiss="modal" href="#" style="margin-left:400px;">Đóng</a>
                    </div>
                    <div class="modal-footer">
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
        </form>
        <BR>



        <button class="btn btn-excel btn-sm" onclick="window.print()"><i class="fas fa-file-pdf"></i>Xuất PDF</button>

        <a class="btn btn-cancel" data-dismiss="modal" href="/chuyenxe">Quay lại</a>
    </div>

</main>
<script>
    load_data()
    async function load_data() {
        var HSD = document.querySelectorAll(".HSD");
        HSD.forEach((i) => {
            const date = new Date(i.innerHTML);
            const day = date.getDate();
            const month = date.getMonth() + 1;
            const year = date.getFullYear();
            const formattedDate = day + '/' + month + '/' + year
            i.innerHTML = formattedDate
        })
    }
    var TheChap = document.querySelectorAll('.TheChap');
    TheChap.forEach((i) => {
        if (i.innerHTML === "true") {
            i.innerHTML = "Có thế chấp"


        } else {
            i.innerHTML = "Ko thế chấp"


        }
    })

</script>

