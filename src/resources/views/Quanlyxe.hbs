<main class="app-content">
  <div class="app-title">
    <ul class="app-breadcrumb breadcrumb side">
      <li class="breadcrumb-item active"><a href="#"><b>Thông báo</b></a></li>
    </ul>
    <div id="clock"></div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="tile">
        <div class="tile-body">
          <div class="row element-button">
               <div class="col-sm-2">

              <a class="btn btn-add btn-sm" href="/quanlyxe/Addxe" title="Thêm"><i class="fas fa-plus"></i>
               Thêm xe</a>
                     </div>
            <div class="col-sm-2">

              <a class="btn btn-add btn-sm" href="/quanlyxe/danhsachxe">
                Danh sách xe</a>
            </div>
               <div class="col-sm-2">
   <button type="button" class="btn btn-primary" id="car-status" onclick="findActiveCarStatus()">Tìm trạng thái xe</button>
            </div>



          
            <div class="col-sm-2" style="">
              <select style="width: 25px;height: 30px;" class="form-control" id="exampleSelect1">
                <option>Đã duyệt</option>
                <option>Chờ duyệt</option>
              </select>
            </div>
          </div>


          <div class="row">
            <div class="col-md-6 col-lg-3">
              <div class="widget-small primary coloured-icon"><i class='icon  bx bxs-user fa-3x'></i>
                <div class="info">
                  <h4>Tổng xe</h4>
                  <p><b id="info_tong_xe"></b></p>
                </div>
              </div>
            </div>
            <div class="col-md-6 col-lg-3">
              <div class="widget-small info coloured-icon"><i class='icon bx bxs-purchase-tag-alt fa-3x'></i>
                <div class="info">
                  <h4>Xe hoạt động</h4>
                  <p><b id="daduyen"></b></p>
                </div>
              </div>
            </div>
            <div class="col-md-6 col-lg-3">
              <div class="widget-small danger coloured-icon"><i class='icon fa-3x bx bxs-info-circle'></i>
                <div class="info">
                  <h4>Xe chờ duyệt</h4>
                  <p><b id="choduyen"></b></p>
                </div>
              </div>
            </div>

          </div>
          <div class="row element-button">
          </div>
          <table class="table table-hover table-bordered" id="sampleTable">     
            <thead>
              <tr>
                <th style="text-align: center;">STT</th>
                <th style="text-align: center;">Biển số xe</th>
                <th style="text-align: center;">Tên xe</th>
                <th style="text-align: center;">Ảnh</th>
                <th style="text-align: center;">Số ghế</th>
                <th style="text-align: center;">Năm sản xuất</th>
                <th style="text-align: center;">Giá </th>
                <th style="text-align: center;">Tên chủ xe</th>
                <th style="text-align: center;">Trạng thái</th>
                <th style="text-align: center;">Chi tiết</th>
              </tr>
            </thead>
            <tbody>
              {{#each data}}
              <tr>
                <td style="text-align: center;" class="stt">{{@index}}</td>
                <td style="text-align: center;">{{this.BKS}} </td>
                <td style="text-align: center;">{{this.MauXe}}</td>
                <td style="text-align: center;"> <img src="/images/{{this.HinhAnh.[0]}}" alt=""
                    class="img-card-person1"> </td>
                <td style="text-align: center;">{{this.SoGhe}} </td>
                <td style="text-align: center;">{{this.NSX}}</td>
                <td style="text-align: center;" class="giathue">{{this.GiaThue1Ngay}}</td>
                <td style="text-align: center;">{{this.ChuSH.UserName}}</td>    
                 <td><span class="TrangThai" style="border-radius: 5px; font-size: 13px; padding: 3px;">{{this.TrangThai}}</span></td>
                 
                <td style="text-align: center;"> <a class="btn btn-info " href="/quanlyxe/ChiTietXe/{{this._id}}"> Xem
                    chi tiết</a></td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</main>
<script>
  const searchInput = document.getElementById('searchInput');
const tableBody = document.getElementById('sampleTable').querySelector('tbody');

searchInput.addEventListener('input', () => {
  const searchTerm = searchInput.value.toLowerCase();

  fetch('/api/xe/findTrangthai0_1')
    .then(response => response.json())
    .then(data => {
      const filteredData = data.filter(car => {
        const carStatus = car.TrangThai.toLowerCase();
        return carStatus.includes(searchTerm);
      });

      // Clear the table body and repopulate it with the filtered data
      tableBody.innerHTML = '';
      filteredData.forEach(car => {
        const row = document.createElement('tr');

        const sttCell = document.createElement('td');
        sttCell.classList.add('stt');
        sttCell.textContent = car.index;

        const bksCell = document.createElement('td');
        bksCell.textContent = car.BKS;

        const mauXeCell = document.createElement('td');
        mauXeCell.textContent = car.MauXe;

        const imgCell = document.createElement('td');
        const img = document.createElement('img');
        img.src = `/images/${car.HinhAnh[0]}`;
        img.classList.add('img-card-person1');
        imgCell.appendChild(img);

        const soGheCell = document.createElement('td');
        soGheCell.textContent = car.SoGhe;

        const nsxCell = document.createElement('td');
        nsxCell.textContent = car.NSX;

        const giaThueCell = document.createElement('td');
        giaThueCell.classList.add('giathue');
        const formattedPrice = new Intl.NumberFormat('vi-VN').format(car.GiaThue1Ngay, {
          minimumFractionDigits: 2,
          decimal: ',',
          thousandsSeparator: '.',
        });
        giaThueCell.textContent = formattedPrice + ' đ';

        const chuSHCell = document.createElement('td');
        chuSHCell.textContent = car.ChuSH.UserName;

        const trangThaiCell = document.createElement('td');
        trangThaiCell.classList.add('TrangThai');
        if (car.TrangThai === 0) {
          trangThaiCell.textContent = 'Chờ duyệt';
          trangThaiCell.style.background = '#F9C9CD';
        } else {
          trangThaiCell.textContent = 'Hoạt động';
          trangThaiCell.style.background = '#BFEFC4';
        }

        const chiTietCell = document.createElement('td');
        const chiTietLink = document.createElement('a');
        chiTietLink.href = `/quanlyxe/ChiTietXe/${car._id}`;
        chiTietLink.textContent = 'Xem chi tiết';
        chiTietCell.appendChild(chiTietLink);

        row.appendChild(sttCell);
        row.appendChild(bksCell);
        row.appendChild(mauXeCell);
        row.appendChild(imgCell);
        row.appendChild(soGheCell);
        row.appendChild(nsxCell);
        row.appendChild(giaThueCell);
        row.appendChild(chuSHCell);
        row.appendChild(trangThaiCell);
        row.appendChild(chiTietCell);

        tableBody.appendChild(row);
      });
    });
});
</script>
<script>
  const a = document.querySelector('.lọc');

  a.addEventListener('click', function () {
    // Hiển thị nội dung của thẻ select
    document.querySelector('#exampleSelect1').style.display = 'block';
  });
</script>
<script>
  load_data()
  async function load_data() {

    const response = await fetch('/api/xe/findTrangthai0_1').then(response => response.json());
    var tt0 = 0;
    var tt1 = 0;
    var stt = 0
    response.forEach(xe => {
      // xe chờ duyệt
      if (xe.TrangThai == 0) {
        tt0 += 1;
      }
      if (xe.TrangThai == 1) {
        tt1 += 1;
      }
    });
    document.getElementById('choduyen').innerText = tt0 + " Xe";
    document.getElementById('daduyen').innerText = tt1 + " Xe";

    var tongxe = document.getElementById('info_tong_xe').innerText = response.length + " Xe";
    var GiaThue = document.querySelectorAll('.giathue');
    var TrangThai = document.querySelectorAll('.TrangThai');
    TrangThai.forEach((i) => {
      if (i.innerHTML == 0) {
        i.innerHTML = "Chờ duyệt"
        i.style.background="#F9C9CD"
      } else {
        i.innerHTML = "Hoạt động"
        i.style.background = "#BFEFC4"
      }
    })

    // số tứ tự
    const stt1 = document.querySelectorAll(".stt");
    stt1.forEach((i) => {
      stt++;
      i.innerText = stt
    })

    GiaThue.forEach((i) => {
      const formattedPrice = new Intl.NumberFormat('vi-VN').format(i.innerHTML, {
        minimumFractionDigits: 2,
        decimal: ',',
        thousandsSeparator: '.',
      });
      i.innerHTML = formattedPrice + " đ"
    })


  }



</script>

