<main class="app-content">
  <div class="app-title">
    <ul class="app-breadcrumb breadcrumb">
      <li class="breadcrumb-item">Quản lý xe</li>
    </ul>
    <div id="clock"></div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="tile">

        <div class="tile-body">
          <div class="row element-button">
             <div class="col-sm-2">
              <button type="button" id="add-new-btn" class="btn btn-add btn-sm"> <i class="fas fa-plus"></i> Thêm
                mới</button>
            </div>

         </div>
            <form action="/api/xe/createform" id="product-form" method="post" enctype="multipart/form-data"style="display: none;">
            <div class="row" >
                <div class="form-group col-md-3">
                  <label class="control-label">Biển số xe</label>
                  <input class="form-control" type="text" name="BKS" placeholder="Nhập biển số xe" required>
                </div>
                <div class="form-group col-md-3 ">
                  <label for="exampleSelect1" class="control-label">Hãng xe</label>
                  <select class="form-control" id="exampleSelect1" name="HangXe">
                    <option disabled>-- Chọn hãng xe --</option>
                    <option value="VinFast" selected>VinFast</option>
                    <option value="Toyota">Toyota</option>
                  </select>
                </div>
                <div class="form-group col-md-3 ">
                  <label for="exampleSelect1" class="control-label">Tên xe</label>
                  <input class="form-control" type="text" name="MauXe" placeholder="Nhập tên xe" required>
                </div>
                <div class="form-group col-md-3 ">
                  <label for="exampleSelect1" class="control-label">Năm sản xuất</label>
                  <select class="form-control" id="exampleSelect1" name="NSX">
                    <option disabled>-- Chọn năm --</option>
                    <option value="2023" selected>2023</option>
                    <option value="2021">2021</option>
                    <option value="2020">2020</option>
                    <option value="2019">2019</option>
                  </select>
                </div>
                <div class="form-group col-md-3 ">
                  <label for="exampleSelect1" class="control-label">Số ghế</label>
                  <select class="form-control" id="exampleSelect1" name="SoGhe">
                    <option disabled>-- Chọn số ghế --</option>
                    <option value="4" selected>4</option>
                    <option value="7">7</option>
                  </select>
                </div>
                <div class="form-group col-md-3 ">
                  <label for="exampleSelect1" class="control-label">Truyền động</label>
                  <select class="form-control" id="exampleSelect1" name="ChuyenDong">
                    <option disabled>-- Chọn truyền động --</option>
                    <option value="Số tự động" selected>Số tự động</option>
                    <option value="Số sàn">Số sàn</option>
                  </select>
                </div>

                <div class="form-group col-md-3">
                  <label for="exampleSelect1" class="control-label">Loại nhiêu liệu</label>
                  <select class="form-control" id="exampleSelect1" name="LoaiNhienLieu">
                    <option disabled>-- Chọn loại nhiêu liệu --</option>
                    <option value="Xăng" selected>Xăng</option>
                    <option value="Dầu">Dầu </option>
                    <option value="Điện">Điện</option>

                  </select>
                </div>
                <div class="form-group col-md-3">
                  <label for="exampleSelect1" class="control-label">Tiêu hao (Lít/100km)</label>
                  <input class="form-control" type="number" name="TieuHao" placeholder="Nhập mức tiêu hao nhiên liệu" required>
                </div>

                <div class="form-group col-md-3">
                  <label class="control-label">Giá </label>
                  <input class="form-control" type="text" name="GiaThue1Ngay" placeholder="Nhập giá thuê" required>
                </div>
                <div class="form-group col-md-3">
                  <label class="control-label">Địa chỉ</label>
                  <input class="form-control" type="text" name="DiaChiXe" placeholder="Nhập địa chỉ của xe" required>
                </div>
                <div class="form-group col-md-12">
                  <label class="control-label">Mô tả xe</label>
                  <textarea class="form-control" name="MoTa" id="mota" placeholder="Nhập nội dung" required></textarea>

                </div>

                <div class="col-md-5">
                  <label for="img" class="control-label">Hình ảnh xe:</label>
                  <input type="file" class="form-control" id="img" placeholder="" name="HinhAnh" accept="Image/*"
                    multiple required>
                  <p id="file-error" style="display:none; color:red;">Bạn chỉ được chọn tối đa 4 ảnh</p>
                </div>
                <div class="col-md-5">
                  <label for="img1" class="control-label">Đăng ký:</label>
 
                  <input type="file" class="form-control" id="img1" placeholder="" name="DangKyXe" accept="Image/*" required>
 
                  <p id="file-error1" style="display:none; color:red;">Bạn chỉ được chọn tối đa 1 ảnh</p>
                </div>
                <div class="col-md-5">
                  <label for="img2" class="control-label">Đăng kiểm:</label>
 
                  <input type="file" class="form-control" id="img2" placeholder="" name="DangKiem" accept="Image/*" required>
 
                  <p id="file-error2" style="display:none; color:red;">Bạn chỉ được chọn tối đa 1 ảnh</p>
                </div>
                <div class="col-md-5">
                  <label for="img3" class="control-label">Bảo hiểm:</label>
 
                  <input type="file" class="form-control" id="img3" placeholder="" name="BaoHiem" accept="Image/*" required>
 
                  <p id="file-error3" style="display:none; color:red;">Bạn chỉ được chọn tối đa 1 ảnh</p>
                </div>
                </div>
                <div class="col-md-5" style="margin-top: 20px;">
                  <button class="btn btn-save" type="submit">Thêm xe</button>
                  <a class="btn btn-cancel" href="/quanlyxe/addxe">Hủy bỏ</a>
                </div>

              </form>
              <div class="row element-button"></div>
          <div class="row">
            <a href="/quanlyxe" class="col-md-6 col-lg-3">
              <div class="widget-small primary coloured-icon"><i class='icon  bx bxs-user fa-3x'></i>
                <div class="info">
                  <h4>Tổng xe</h4>
                  <p><b id="info_tong_xe"></b></p>
                </div>
              </div>
            </a>
            <a href="/quanlyxe/hoatdong" class="col-md-6 col-lg-3">
              <div class="widget-small primary coloured-icon"><i class='icon bx bxs-truck fa-3x'></i>
                <div class="info">
                  <h4>Xe hoạt động</h4>
                  <p><b id="daduyen"></b></p>
                </div>
              </div>
            </a>
            <a href="/quanlyxe/choduyen" class="col-md-6 col-lg-3">
              <div class="widget-small warning coloured-icon"><i class='icon fa-3x bx bxs-comment-error'></i>
                <div class="info">
                  <h4>Xe chờ duyệt</h4>
                  <p><b id="choduyen"></b></p>
                </div>
              </div>
            </a>

            <a href="/quanlyxe/khonghoatdong" class="col-md-6 col-lg-3">
              <div class="widget-small info  coloured-icon"><i class='icon fa-3x bx bxs-car-mechanic'></i>
                <div class="info">
                  <h4> Xe không hoạt động</h4>
                  <p><b id="khonghd"></b></p>
                </div>
              </div>
            </a>
            <a href="/quanlyxe/tuchoi" class="col-md-6 col-lg-3">
              <div class="widget-small danger coloured-icon"><i class='icon fa-3x bx bxs-info-circle'></i>
                <div class="info">
                  <h4>Từ chối</h4>
                  <p><b id="tuchoi"></b></p>
                </div>
              </div>
            </a>
            <a href="/quanlyxe/vohieuhoa" class="col-md-6 col-lg-3">
              <div class="widget-small info  coloured-icon"><i class='icon fa-3x bx bxs-car-mechanic'></i>
                <div class="info">
                  <h4>Vô hiệu hóa</h4>
                  <p><b id="vhh"></b></p>
                </div>
              </div>
            </a>
          </div>

        </div>
        <div class="row element-button">
        </div>
        <table class="table table-hover table-bordered" id="sampleTable">
          <thead>
            <tr>
              <th style="text-align: center;">STT</th>
              <th style="text-align: center;">Biển số xe</th>
              <th style="text-align: center;">Tên xe</th>
              <th style="text-align: center;">Ảnh</th>
              <th style="text-align: center;">Năm sản xuất</th>
              <th style="text-align: center;">Giá </th>
              <th style="text-align: center;">Thế chấp</th>
              <th style="text-align: center;">Tên chủ xe</th>
              <th style="text-align: center;">Trạng thái</th>
              <th style="text-align: center;" width="80">Chức năng</th>
            </tr>
          </thead>
          <tbody>
            {{#each data}}
            <tr>
              <td style="text-align: center; word-break: break-word;vertical-align: middle;" class="stt">{{@index}}</td>
              <td style="text-align: center; word-break: break-word;vertical-align: middle;">{{this.BKS}} </td>
              <td style="text-align: center; word-break: break-word;vertical-align: middle;">{{this.MauXe}}</td>
              <td style="text-align: center; word-break: break-word;vertical-align: middle;"> <img
                  src="/images/{{this.HinhAnh.[0]}}" alt="" class="img-card-person1">
              </td>
      
              <td style="text-align: center; word-break: break-word;vertical-align: middle;">{{this.NSX}}</td>
              <td style="text-align: center; word-break: break-word;vertical-align: middle;" class="giathue">
                {{this.GiaThue1Ngay}}</td>
                 <td style="text-align: center; word-break: break-word;vertical-align: middle;"><span  class="TheChap"
                 style="border-radius: 5px; font-size: 13px; padding: 3px;">{{this.TheChap}}</span></td>
              <td style="text-align: center; word-break: break-word;vertical-align: middle;">{{this.ChuSH.UserName}}
              </td>
              <td style="text-align: center; word-break: break-word;vertical-align: middle;"><span class="TrangThai"
                  style="border-radius: 5px; font-size: 13px; padding: 3px;">{{this.TrangThai}}</span></td>
              <td style="text-align: center; word-break: break-word;vertical-align: middle;"> <a class="btn btn-info "
                  href="/quanlyxe/ChiTietXe?id={{this._id}}"> Xem
                  chi tiết</a></td>
            </tr>
            {{/each}}


          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
