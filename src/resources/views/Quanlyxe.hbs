<main class="app-content">
  <div class="app-title">
    <ul class="app-breadcrumb breadcrumb side">
      <li class="breadcrumb-item active"><a href="#"><b>Thông báo</b></a></li>
    </ul>
    <div id="clock"></div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="tile">
        <div class="tile-body">
          <div class="row element-button">
            <div class="col-sm-2">

              <a class="btn btn-add btn-sm" href="/quanlyxe/danhsachxe">
                Danh sách xe</a>
            </div>



            <div class="col-sm-2">
              <a class="btn btn-delete btn-sm" type="button" title="Xóa" onclick="myFunction(this)"><i
                  class="fas fa-trash-alt"></i> Xóa tất cả </a>
            </div>
          </div>


          <div class="row">
            <div class="col-md-6 col-lg-3">
              <div class="widget-small primary coloured-icon"><i class='icon  bx bxs-user fa-3x'></i>
                <div class="info">
                  <h4>Tổng xe</h4>
                  <p><b id="info_tong_xe"></b></p>
                </div>
              </div>
            </div>
            <div class="col-md-6 col-lg-3">
              <div class="widget-small info coloured-icon"><i class='icon bx bxs-purchase-tag-alt fa-3x'></i>
                <div class="info">
                  <h4>Xe hoạt động</h4>
                  <p><b id="daduyen"></b></p>
                </div>
              </div>
            </div>
            <div class="col-md-6 col-lg-3">
              <div class="widget-small danger coloured-icon"><i class='icon fa-3x bx bxs-info-circle'></i>
                <div class="info">
                  <h4>Xe chờ duyệt</h4>
                  <p><b id="choduyen"></b></p>
                </div>
              </div>
            </div>

          </div>
          <div class="row element-button">
          </div>
          <table class="table table-hover table-bordered" id="sampleTable">
            <thead>
              <tr>
                <th style="text-align: center;">STT</th>
                <th style="text-align: center;">Biển số xe</th>
                <th style="text-align: center;">Tên xe</th>
                <th style="text-align: center;">Ảnh</th>
                <th style="text-align: center;">Số ghế</th>
                <th style="text-align: center;">Năm sản xuất</th>
                <th style="text-align: center;">Giá </th>
                <th style="text-align: center;">Tên chủ xe</th>
                <th style="text-align: center;">Trạng thái</th>
                <th style="text-align: center;">Chi tiết</th>
              </tr>
            </thead>
            <tbody>
              {{#each data}}
              <tr>
                <td style="text-align: center;" class="stt">{{@index}}</td>
                <td style="text-align: center;">{{this.BKS}} </td>
                <td style="text-align: center;">{{this.MauXe}}</td>
                <td style="text-align: center;"> <img src="/images/{{this.HinhAnh.[0]}}" alt=""
                    class="img-card-person1"> </td>
                <td style="text-align: center;">{{this.SoGhe}} </td>
                <td style="text-align: center;">{{this.NSX}}</td>
                <td style="text-align: center;" class="giathue">{{this.GiaThue1Ngay}}</td>
                <td style="text-align: center;">{{this.ChuSH.UserName}}</td>
                <td style="text-align: center; font-size: 13px;" class="trangthai">{{this.TrangThai}}</td>
                <td style="text-align: center;"> <a class="btn btn-info " href="/quanlyxe/ChiTietXe/{{this._id}}"> Xem
                    chi tiết</a></td>
              </tr>
              {{/each}}

            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</main>

<script>
  load_data()
  async function load_data() {

    const response = await fetch('/api/xe/list').then(response => response.json());
    var tt0 = 0;
    var tt1 = 0;
    var stt = 0
    response.forEach(xe => {
      // xe chờ duyệt
      if (xe.TrangThai == 0) {
        tt0 += 1;
      }
      if (xe.TrangThai == 1) {
        tt1 += 1;
      }
    });
    document.getElementById('choduyen').innerText = tt0 + " Xe";
    document.getElementById('daduyen').innerText = tt1 + " Xe";

    var tongxe = document.getElementById('info_tong_xe').innerText = response.length + " Xe";
    var GiaThue = document.querySelectorAll('.giathue');
    var TrangThai = document.querySelectorAll('.trangthai');
    TrangThai.forEach((i) => {
      if (i.innerHTML == 0) {
        i.innerHTML = "Chờ duyệt"
      } else {
        i.innerHTML = "Đang hoạt động"
      }
    })

    // số tứ tự
    const stt1 = document.querySelectorAll(".stt");
    stt1.forEach((i) => {
      stt++;
      i.innerText = stt
    })

    GiaThue.forEach((i) => {
      const formattedPrice = new Intl.NumberFormat('vi-VN').format(i.innerHTML, {
        minimumFractionDigits: 2,
        decimal: ',',
        thousandsSeparator: '.',
      });
      i.innerHTML = formattedPrice + " đ"
    })


  }



</script>

